<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gelora.pengguna">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.screen.portrait" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:allowBackup">
        <activity android:name=".activity.TentangKami"></activity>
        <activity
            android:name=".activity.ImagePreviewActivity"
            android:theme="@style/AppTheme.DialogPop" />
        <activity
            android:name=".activity.DetailPesananActivity"
            android:theme="@style/AppTheme.DialogPop" />
        <activity android:name=".activity.LapanganFavoritActivity" />
        <activity android:name=".activity.BerhasilUploadActivity" />
        <activity android:name=".activity.UploadBuktiPembayaranActivity" />
        <activity android:name=".activity.PesanLapanganActivity" />
        <activity android:name=".activity.AkunActivity" />
        <activity
            android:name=".activity.Login"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.Register"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.WelcomeScreen" />
        <activity android:name=".activity.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>